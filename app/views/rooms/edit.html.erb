<div class="min-h-screen bg-gray-50 py-6">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
    <!-- Header -->
    <div class="mb-6">
      <%= link_to room_path(@room), class: "inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700" do %>
        <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Room
      <% end %>
    </div>

    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-6">
          Edit Room
        </h3>

        <%= form_with model: @room, local: true, class: "space-y-6" do |form| %>
          <% if @room.errors.any? %>
            <div class="rounded-md bg-red-50 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    There were errors with your submission:
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @room.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
            <div class="sm:col-span-2">
              <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.text_field :name,
                    class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
                    placeholder: "Enter room name" %>
              </div>
            </div>

            <div>
              <%= form.label :user_id, "Owner", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.select :user_id,
                    options_from_collection_for_select(@users, :id, :name, @room.user_id),
                    {},
                    { class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" } %>
              </div>
            </div>

            <div>
              <%= form.label :room_type, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.select :room_type,
                    options_for_select([['Standard', 'standard'], ['Custom', 'custom']], @room.room_type),
                    {},
                    { class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" } %>
              </div>
            </div>

            <div>
              <%= form.label :limit_point, "Point Limit", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.number_field :limit_point,
                    class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
                    placeholder: "Optional point limit",
                    min: 1 %>
              </div>
            </div>

            <div>
              <%= form.label :limit_round, "Round Limit", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.number_field :limit_round,
                    class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md",
                    placeholder: "Optional round limit",
                    min: 1 %>
              </div>
            </div>

            <div class="sm:col-span-2">
              <div class="relative flex items-start">
                <div class="flex items-center h-5">
                  <%= form.check_box :show_total_point,
                      class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
                </div>
                <div class="ml-3 text-sm">
                  <%= form.label :show_total_point, "Show Total Points", class: "font-medium text-gray-700" %>
                  <p class="text-gray-500">Display the total points for all players in the room.</p>
                </div>
              </div>
            </div>

            <div class="sm:col-span-2">
              <label class="block text-sm font-medium text-gray-700 mb-2">Room Participants</label>
              <div class="mt-1 space-y-2 max-h-40 overflow-y-auto border border-gray-300 rounded-md p-3">
                <% @users.each do |user| %>
                  <div class="relative flex items-start">
                    <div class="flex items-center h-5">
                      <%= check_box_tag "room[participant_ids][]", user.id, @room.participants.include?(user),
                          class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded",
                          id: "participant_#{user.id}" %>
                    </div>
                    <div class="ml-3 text-sm">
                      <%= label_tag "participant_#{user.id}", user.name, class: "font-medium text-gray-700" %>
                    </div>
                  </div>
                <% end %>
              </div>
              <p class="mt-1 text-xs text-gray-500">Select users who can participate in this room.</p>
            </div>
          </div>

          <div class="flex justify-end space-x-3">
            <%= link_to room_path(@room),
                class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
              Cancel
            <% end %>
            <%= form.submit "Update Room",
                class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
